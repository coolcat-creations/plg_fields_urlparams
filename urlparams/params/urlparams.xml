<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="fieldparams">
		<fieldset name="fieldparams">
			<field
					name="donationcode"
					label="PLG_FIELDS_PARAM_URLPARAM_DONATE"
					type="spacer"
					showon="hidedonation:show"
			/>

			<field name="urlparam"
					type="text"
					default=""
